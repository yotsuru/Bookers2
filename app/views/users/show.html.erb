<div>
  <%= flash[:notice] %>
</div>

<%= render 'books/userinfo' ,book: @book, user: @user %><!--ローカル変数が２つ-->
<%#= render 'books/booknew' , book: @book %>
<!-- ユーザーの詳細 -->
<div>
  <h3><%= @user.name %></h3>
  <%= image_tag @user.get_profile_image(100,100) %>
  <% if @user == current_user %>
     <%#= link_to "プロフィール編集", edit_user_path(@user) %>
     <%= link_to edit_user_path(@user) do %><i class="fa-solid fa-user-gear"></i><% end %>
  <% end %>
</div>

<!-- ユーザーの投稿一覧 -->

<% @books.each do |book| %>
<div>
  <p><%= image_tag book.user.get_profile_image(100,100)%></p>
  <p>Title</p><p><%= link_to book.title,book_path(book.id) %></p>
  <p>Opinion：<%= book.opinion %></p>
  
 <% end %>
</div>