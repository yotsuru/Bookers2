<!-- ユーザーの詳細 -->
<div>
  <h3><%= @user.name %></h3>
  <%= image_tag @user.get_profile_image(100,100) %>
  <% if @user == current_user %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <% end %>
</div>

<!-- ユーザーの投稿一覧 -->

<% @books.each do |book| %>
<div>
  <p><%= image_tag book.user.get_profile_image(100,100)%></p>
  <p>Title</p><p><%= link_to book.title,book_path(book.id) %></p>
  <p>Opinion：<%= book.opinion %></p>
  
 <% end %>
</div>