<div class="container mt-5 pt-5">
 <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

<h2>User info</h2>
<%= form_with model: @user do |f| %>
  <div class="mx-auto px-5 py-3"><label for="inputName">Name</label>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%></div>
  
  <div class="mx-auto px-5 py-3"><label for="inputImage">Image</label>
  <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %></div>
  
  <div class="mx-auto px-5 py-3"><label for="inputIntroduction">Introduction</label>
  <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction" %></div>
  
  <div class="mx-auto px-5 py-5"><%= f.submit "Update User" %></div>
<% end %>

 </div>
 </div>
</div>