<!-- ユーザー情報 -->
<h1>User info</h1>
<div>
  <%= image_tag user.get_profile_image(100,100) %>
  <h3>name</h3><h3><%= user.name %></h3>
  <h3>introduction</h3><h3><%= user.introduction %></h3>
  <% if user == current_user %>
    <p><%= link_to "プロフィール編集", edit_user_path(user) %></p>
  <% end %>
</div>

