<div class="container">
  <div class="row">
   
<%= render 'userinfo' , book: @book,user: current_user %><!--ローカル変数が２つ-->
    
   <div class="col-md-9">
  <h1>Books</h1>
   
    <table class="table table-striped">
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </tr>
      </thead>
    <% @books.each do |book| %>
      <tbody>
        <tr>
        <td><%= link_to user_path(book.id) do %>
            <%= image_tag book.user.get_profile_image(100,100) %>
            <% end %></td>
    
        <td><%= link_to book_path(book.id) do %>
            <%= book.title %>
            <% end %></td>
    
        <td><%= book.opinion %><% end %></td>
        </tr>
      </tbody>
   </table>

 </div>
 </div>
</div>

    